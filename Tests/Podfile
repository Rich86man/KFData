xcodeproj 'KFDataTests'
workspace '../KFData'
inhibit_all_warnings!

def import_pods
    pod 'QueryKit', :git => 'https://github.com/kylef/QueryKit', :branch => 'objectivec'
    pod 'KFData', :path => '../'
    pod 'KFData/Compatibility', :path => '../'
    pod 'Expecta'
end

target :ios do
    platform :ios, '5.0'
    link_with 'iOS Tests'
    import_pods
end

target :osx do
    platform :osx, '10.7'
    link_with 'OS X Tests'
    import_pods
end

